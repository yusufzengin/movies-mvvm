<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_graph"
    app:startDestination="@id/movieListFragment"
    tools:ignore="UnusedNavigation">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.yusufzengin.movieviewer.ui.list.movie.MovieListFragment"
        android:label="Trending Movies"
        tools:layout="@layout/movie_list_fragment">

        <action
            android:id="@+id/action_to_movieDetail"
            app:destination="@id/movieDetailFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/fragment_fade_enter"
            app:popExitAnim="@anim/fragment_fade_exit">
            <argument
                android:name="movieId"
                android:defaultValue="0"
                app:argType="integer" />
            <argument
                android:name="movieTitle"
                android:defaultValue="-"
                app:argType="string" />

        </action>

    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.yusufzengin.movieviewer.ui.detail.movie.MovieDetailFragment"
        android:label="{movieTitle}"
        tools:layout="@layout/movie_detail_fragment">
        <argument
            android:name="movieId"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>